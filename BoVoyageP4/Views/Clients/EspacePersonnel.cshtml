    ViewBag.Title = "EspacePersonnel";
}

<h2>EspacePersonnel</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Civilite)
        </dt>

        <dd>
