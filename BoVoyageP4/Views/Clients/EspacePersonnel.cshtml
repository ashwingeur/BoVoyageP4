        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telephone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateNaissance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateNaissance)
        </dd>
    </dl>



    <div>
        @if (Model.DossierReservation != null)
        {
            <dd>Reservation</dd>
            foreach (var dossier in Model.DossierReservation)
            {
                <div class="breadcrumb">
                    <p>@dossier.Voyage.Destination.Description</p>
                    <p class="alert-info">Etat : @dossier.EtatDossierReservation</p>
                </div>

            }
        }
    </div>
</div>