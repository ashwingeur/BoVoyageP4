@{
    var client = Session["CLIENT"] as BoVoyageP4.Models.Client;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>BoVoyage</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Travello template project">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Content/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/styles/bootstrap4/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/OwlCarousel2-2.2.1/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/plugins/OwlCarousel2-2.2.1/animate.css" rel="stylesheet" />
    <link href="~/Content/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" rel="stylesheet" />
    <link href="~/Content/styles/responsive.css" rel="stylesheet" />
    <link href="~/Content/styles/main_styles.css" rel="stylesheet" />
    <link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />

</head>
<body>
    <div>
        <div class="super_container">



            <!-- Header -->

            <header class="header">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="header_content d-flex flex-row align-items-center justify-content-start">
                                <div class="header_content_inner d-flex flex-row align-items-end justify-content-start">
                                    <div class="logo"> <a>  @Html.ActionLink("BoVoyage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" }) </a></div>
                                    <nav class="main_nav">
                                        <ul class="d-flex flex-row align-items-start justify-content-start">
                                            <li class="active"><a>@Html.ActionLink("Accueil", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</a></li>
                                            <li><a> @Html.ActionLink("À propos", "About", "Home")</a></li>
                                            <li><a>@Html.ActionLink("Contact", "Contact", "FormulaireContacts")</a></li>
                                            <li><a>@Html.ActionLink("Inscription", "Subscribe", "Clients")</a></li>
                                            <li><a href="@Url.Action("index", "TableauDeBord", new { area="backoffice" })">Espace collaborateur</a></li>
                                            <li>

                                                @if (client == null)
                                                {
                                                    <!--

                                            GTM:Url.Action("login", "AuthentificationClient") dont work
                                            <form class="navbar-form navbar-right" method="post" action="@Url.Action("login", "AuthentificationClient")">
                                                <div class="form-group">
                                                    <input type="text" name="Email" class="form-control" placeholder="Login">
                                                    <input type="password" name="MotDePasse" class="form-control" placeholder="Mot de passe" />
                                                </div>
                                                <button type="submit" class="btn btn-info">OK</button>
                                            </form>
                                            <ul class="nav navbar-nav navbar-right">
                                                <li><a href="@Url.Action("subscribe", "clients")">Inscription</a></li>
                                            </ul>
                                            -->
                                                    <ul class="d-flex flex-row align-items-start justify-content-start">
                                                        <li><a href="@Url.Action("Login","AuthentificationClient",new { area="" } )">Se connecter</a></li>
                                                    </ul>

                                                }
                                                else
                                                {
                                                    <ul class="d-flex flex-row align-items-start justify-content-start">
                                                        <li>Bonjour  @client.Prenom</li>
                                                        <li><a href="@Url.Action("EspacePersonnel", "clients", new { area="" })">Espace Personnel</a></li>
                                                        <li><a href="@Url.Action("logout", "AuthentificationClient")"><i class="glyphicon glyphicon-log-out"></i></a></li>
                                                    </ul>
                                                }
                                            </li>
                                        </ul>
                                    </nav>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </header>



            <!-- Home -->

            <div class="home">

                <!-- Home Picture -->
                <div class="home_slider_container">
                    <div class="owl-carousel owl-theme home_slider">

                        <!-- Picture -->
                        <div class="owl-item">
                            <div class="background_image" style="background-image:url(Content/images/home_slider.jpg)"></div>
                            <div class="home_slider_content_container">
                                <div class="container">
                                    <div class="row">
                                        <div class="col">
                                            <div class="home_slider_content">
                                                <div class="home_title"><h2>Où souhaitez vous partir ?</h2></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>



            <!-- Search -->

            <div class="home_search">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <div class="home_search_container">
                                <div class="home_search_title">Rechercher votre voyage</div>
                                <div class="home_search_content">
                                    <form action="@Url.Action("Recherche", "Home")" class="home_search_form" id="home_search_form">
                                        <div class="d-flex flex-lg-row flex-column align-items-start justify-content-lg-between justify-content-start">
                                            <input type="text" class="search_input search_input_1" placeholder="Recherche par Region" name="Filter" required="required">

                                            <button class="home_search_button">search</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="container body-content">
                @Html.Partial("_PartialDisplay")
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - BoVoyage</p>
                </footer>
            </div>


        </div>

        <script src="~/Content/js/jquery-3.2.1.min.js"></script>
        <script src="~/Content/styles/bootstrap4/popper.js"></script>
        <script src="~/Content/styles/bootstrap4/bootstrap.min.js"></script>
        <script src="~/Content/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
        <script src="~/Content/plugins/Isotope/isotope.pkgd.min.js"></script>
        <script src="~/Content/plugins/scrollTo/jquery.scrollTo.min.js"></script>
        <script src="~/Content/plugins/easing/easing.js"></script>
        <script src="~/Content/plugins/parallax-js-master/parallax.min.js"></script>
     
     
    

    </div>
</body>
</html>
